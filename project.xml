    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/src/resources/fastagi</directory>
          <includes>
            <include>test-mapping.properties</include>
          </includes>
          <filtering>false</filtering>
        </resource>
        <resource>
          <directory>${basedir}/src/resources/log4j</directory>
